@model Htime.Models.LoginVM
@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f2f2f2;
        }

        .login-container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-image {
            background: url('/img/anhbia3.jpg') center center / cover no-repeat;
        }
    </style>
</head>
<body>
    <div class="container login-container">
        <div class="row w-100 shadow rounded-4 overflow-hidden">
            <div class="col-lg-6 login-image d-none d-lg-block"></div>
            <div class="col-lg-6 bg-white p-5">
                <div class="mb-4">
                    <h5 class="fw-bold">HTIME</h5>
                    <h2 class="fw-bold">Nice To See You Again</h2>
                </div>
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Login</label>
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />                           
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>                    
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </div>             
                    <div class="text-center">
                        <span>Don't have an account? <a href="#">Sign up now</a></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
