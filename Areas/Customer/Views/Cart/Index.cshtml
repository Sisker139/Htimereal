<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-img-placeholder {
          width: 80px;
          height: 80px;
          background-color: #f2f2f2;
          display: flex;
          align-items: center;
          justify-content: center;
          border-radius: 8px;
        }
        .qty-btn {
          width: 32px;
          height: 32px;
          border-radius: 50%;
        }
        .card-footer {
          background-color: white;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container my-5">
        <h2 class="fw-bold mb-4">Your Cart</h2>

        <div class="card mb-3 p-3">
            <!-- Item 1 -->
            <div class="d-flex align-items-center justify-content-between border-bottom pb-3">
                <div class="d-flex align-items-center">
                    <div class="product-img-placeholder me-3">
                        <img src="https://via.placeholder.com/60" alt="Product" class="img-fluid">
                    </div>
                    <div>
                        <h6 class="mb-1 fw-bold">Premium Headphones</h6>
                        <small class="text-muted">Black</small>
                        <div class="mt-2 d-flex align-items-center gap-2">
                            <button class="btn btn-outline-secondary btn-sm qty-btn">−</button>
                            <span>1</span>
                            <button class="btn btn-outline-secondary btn-sm qty-btn">+</button>
                        </div>
                    </div>
                </div>
                <div class="text-end">
                    <p class="mb-1 fw-bold">$149.99</p>
                    <button class="btn btn-link text-danger p-0">🗑️ Remove</button>
                </div>
            </div>

            <!-- Item 2 -->
            <div class="d-flex align-items-center justify-content-between pt-3">
                <div class="d-flex align-items-center">
                    <div class="product-img-placeholder me-3">
                        <img src="https://via.placeholder.com/60" alt="Product" class="img-fluid">
                    </div>
                    <div>
                        <h6 class="mb-1 fw-bold">Minimalist Watch</h6>
                        <small class="text-muted">Silver</small>
                        <div class="mt-2 d-flex align-items-center gap-2">
                            <button class="btn btn-outline-secondary btn-sm qty-btn">−</button>
                            <span>2</span>
                            <button class="btn btn-outline-secondary btn-sm qty-btn">+</button>
                        </div>
                    </div>
                </div>
                <div class="text-end">
                    <p class="mb-1 fw-bold">$89.99</p>
                    <button class="btn btn-link text-danger p-0">🗑️ Remove</button>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="card p-3 mb-4">
            <h6 class="fw-bold mb-3">Order Summary</h6>
            <div class="d-flex justify-content-between">
                <span class="text-muted">Subtotal</span>
                <span class="fw-bold">$329.97</span>
            </div>
            <div class="d-flex justify-content-between">
                <span class="text-muted">Shipping</span>
                <span class="fw-bold">$9.99</span>
            </div>
            <hr>
            <div class="d-flex justify-content-between">
                <span class="fw-bold">Total</span>
                <span class="fw-bold fs-5">$364.71</span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-between">
            <a href="#" class="btn btn-outline-dark">
                ← Continue Shopping
            </a>
            <a href="#" class="btn btn-dark">
                Proceed to Checkout →
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
