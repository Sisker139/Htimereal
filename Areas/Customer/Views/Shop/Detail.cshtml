@model Htime.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class="card-img img-fluid" src="~/img/@Model.ImageUrl" alt="@Model.Name" id="product-detail">
                </div>
            </div>

            <div class="col-lg-7 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="h2">@Model.Name</h1>
                        <p class="h3 py-2">$@Model.Price</p>

                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Thương hiệu:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>@Model.Brand</strong></p>
                            </li>
                        </ul>

                        <h6>Mô tả:</h6>
                        <p>@Model.Description</p>

                        <h6>Số lượng còn lại: <span class="text-danger">@Model.StockQuantity</span></h6>

                        <form asp-action="AddToCart" asp-controller="Cart" method="post">
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <div class="row">
                                <div class="col-auto">
                                    <ul class="list-inline pb-3">
                                        <li class="list-inline-item text-right">
                                            Số lượng:
                                        </li>
                                        <li class="list-inline-item"><span class="btn btn-success" id="btn-minus">-</span></li>
                                        <li class="list-inline-item"><span class="badge bg-secondary" id="var-value">1</span></li>
                                        <li class="list-inline-item"><span class="btn btn-success" id="btn-plus">+</span></li>
                                        <input type="hidden" id="product-quanity" name="quantity" value="1" />
                                    </ul>
                                </div>
                            </div>
                            <div class="row pb-3">
                                <div class="col d-grid">
                                    <button type="submit" class="btn btn-success btn-lg">Thêm vào giỏ hàng</button>
                                </div>
                            </div>
                        </form>

                        <script>
                            document.getElementById("btn-minus").addEventListener("click", function () {
                                var value = parseInt(document.getElementById("product-quanity").value);
                                if (value > 1) {
                                    value--;
                                    document.getElementById("product-quanity").value = value;
                                    document.getElementById("var-value").textContent = value;
                                }
                            });

                            document.getElementById("btn-plus").addEventListener("click", function () {
                                var value = parseInt(document.getElementById("product-quanity").value);
                                value++;
                                document.getElementById("product-quanity").value = value;
                                document.getElementById("var-value").textContent = value;
                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
