<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <!-- Navbar -->
   <!-- Navbar -->
<nav class="navbar navbar-dark bg-dark px-3" style="height: 70px;">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <span class="navbar-brand mb-0 h1">Trang Admin</span>

        <div class="top-link d-flex align-items-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="text-white me-2">Welcome @Context.User.Identity.Name,</span>
                    <a asp-controller="Account" asp-action="Logout" class="text-white text-decoration-none">
                        <small>Logout</small>
                    </a>
                }
                else
                {
                    <a class="nav-icon position-relative text-decoration-none text-white" asp-controller="Account" asp-action="Login">
                        <i class="fa fa-fw fa-user me-2"></i> Login
                    </a>
                }
        </div>
    </div>
</nav>


    <!-- Full height layout with sidebar + content -->
    <div class="container-fluid">
        <div class="row" style="height: calc(100vh - 70px);">
            <!-- 56px là chiều cao mặc định của navbar -->
            <!-- Sidebar -->
            <div class="col-md-2 bg-dark text-white d-flex flex-column overflow-auto">
                <ul class="nav flex-column pt-3">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="QuanlySP" asp-action="Index">Sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="QuanlyDH" asp-action="Index">Đơn hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Customer" asp-controller="Shop" asp-action="Index">Trang chủ</a>
                    </li>
                </ul>
            </div>

            <!-- Main content -->
            <div class="col-md-10 overflow-auto p-4">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
